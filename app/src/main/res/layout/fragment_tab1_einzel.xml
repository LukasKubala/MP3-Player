<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WiedergabeActivity">

    <Button
        android:id="@+id/Stopp"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/Play_Pause"
        android:layout_marginTop="60dp"
        android:layout_alignRight="@id/Play_Pause"
        android:layout_marginRight="150dip"
        android:background="@drawable/stop" />

    <Button
        android:id="@+id/Previous"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/Play_Pause"
        android:layout_marginRight="60dip"
        android:layout_alignBottom="@id/Play_Pause"
        android:background="@drawable/previous" />

    <Button
        android:id="@+id/Next"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/Play_Pause"
        android:layout_marginLeft="60dip"
        android:layout_alignBottom="@id/Play_Pause"
        android:background="@drawable/next" />

    <Button
        android:id="@+id/Play_Pause"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dip"
        android:background="@drawable/play" />

    <Button
        android:id="@+id/Shuffle"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/Play_Pause"
        android:layout_alignRight="@id/Play_Pause"
        android:layout_marginRight="150dip"
        android:background="@drawable/shuffle" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/Play_Pause"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:fadeScrollbars="true"
        android:max="90"
        android:visibility="visible" />

</RelativeLayout>